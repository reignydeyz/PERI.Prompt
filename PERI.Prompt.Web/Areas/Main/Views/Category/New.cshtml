@using EF = PERI.Prompt.EF
@using Core = PERI.Prompt.Core
@using BLL = PERI.Prompt.BLL
@model Tuple<EF.Category, bool>
@{

    Layout = "~/Views/Shared/Blogger/Main.cshtml";
}

<!-- bootstrap wysihtml5 - text editor -->
<link rel="stylesheet" href="~/template/admin/plugins/bootstrap-wysihtml5/bootstrap3-wysihtml5.min.css">

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                New category
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-12">
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()
                            <div class="form-group">
                                <label>Name *</label>
                                @Html.TextBoxFor(x => x.Item1.Name, new { @class = "form-control", placeholder = "Name", required = "", maxlength = "50" })
                            </div>

                            <div class="form-group">
                                <label>Sort Order *</label>
                                @Html.DropDownListFor(x => x.Item1.BlogSortOrderId, new SelectList(ViewBag.BlogSortOrders, "BlogSortOrderId", "Name"), "--SELECT--", new { @class = "form-control", @required = "" })
                            </div>

                            <div class="checkbox">
                                <label>
                                    @Html.CheckBoxFor(x => x.Item2)
                                    Is active
                                </label>
                            </div>

                            <span style="color:red">@Html.ValidationSummary()</span>
                            <button type="submit" class="btn btn-primary">Submit</button>
                            <a href="#" class="btn btn-default" onclick="window.history.back();">Cancel</a>
                        }
                    </div>
                    <!-- /.col-lg-6 (nested) -->
                    <!-- /.col-lg-6 (nested) -->
                </div>
                <!-- /.row (nested) -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>