@using PERI.Prompt.Web.Models
@model ChangePassword
@{
    Layout = "~/Views/Shared/Blogger/Form.cshtml";
}
<script src="~/template/admin/plugins/jQuery/jquery-2.2.3.min.js"></script>
<script src="~/template/admin/plugins/jQueryUI/jquery-ui.js"></script>
<link href="~/template/admin/pwd/strength.css" rel="stylesheet" />
<script src="~/template/admin/pwd/strength.js"></script>
<script type="text/javascript">
    (function ($) {
        $(document).ready(function () {
            $("#NewPassword").strength({ strengthClass: 'strength', strengthButtonText: '' });
        });

    })(jQuery);
</script>
<p class="login-box-msg">Sign in to start your session</p>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-group has-feedback">
        @Html.TextBoxFor(x => x.NewPassword, new { placeholder = "New password", type = "password", required = "", @class = "form-control" })
        <span class="glyphicon glyphicon-lock form-control-feedback"></span>
    </div>

    <div class="form-group has-feedback">
        @Html.TextBoxFor(x => x.ReEnterNewPassword, new { placeholder = "Re-enter new password", type = "password", required = "", @class = "form-control" })
        <span class="glyphicon glyphicon-lock form-control-feedback"></span>
    </div>

    @Html.ValidationSummary()
    <div class="row">
        <!-- /.col -->
        <div class="col-xs-4">
            <button type="submit" class="btn btn-primary btn-block btn-flat">Submit</button>
        </div>
        <!-- /.col -->
    </div>
}

