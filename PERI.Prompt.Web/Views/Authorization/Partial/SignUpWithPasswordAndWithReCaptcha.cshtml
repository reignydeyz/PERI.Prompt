@using EF = PERI.Prompt.EF
@using BLL = PERI.Prompt.BLL
@model EF.User

<script src="https://www.google.com/recaptcha/api.js" async defer></script>
<script src="~/template/admin/plugins/jQuery/jquery-2.2.3.min.js"></script>
<script src="~/template/admin/plugins/jQueryUI/jquery-ui.js"></script>
<link href="~/template/admin/pwd/strength.css" rel="stylesheet" />
<script src="~/template/admin/pwd/strength.js"></script>
<script type="text/javascript">
    (function ($) {
        $(document).ready(function () {
            $("#PasswordHash").strength({ strengthClass: 'strength', strengthButtonText: '' });
        });

    })(jQuery);
</script>
<p class="login-box-msg">Register a new membership</p>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-group has-feedback">
        @Html.TextBoxFor(x => x.FirstName, new { placeholder = "First name", required = "", @class = "form-control" })
        <span class="glyphicon glyphicon-user form-control-feedback"></span>
    </div>

    <div class="form-group has-feedback">
        @Html.TextBoxFor(x => x.LastName, new { placeholder = "Last name", required = "", @class = "form-control" })
        <span class="glyphicon glyphicon-user form-control-feedback"></span>
    </div>

    <div class="form-group has-feedback">
        @Html.TextBoxFor(x => x.Email, new { placeholder = "Email", type = "email", required = "", @class = "form-control" })
        <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
    </div>

    <div class="form-group has-feedback">
        @Html.TextBoxFor(x => x.PasswordHash, new { placeholder = "Password", type = "password", required = "", @class = "form-control" })
        <span class="glyphicon glyphicon-lock form-control-feedback"></span>
    </div>

    var settings = ViewBag.Settings as List<EF.Setting>;
    var recaptchaSettings = settings.Where(x => x.Group == "Recaptcha");

    <div class="g-recaptcha" data-sitekey="@recaptchaSettings.First(x => x.Key == "Recaptcha public key").Value"></div>

    @Html.ValidationSummary()
    <div class="row">
        <!-- /.col -->
        <div class="col-xs-4">
            <button type="submit" class="btn btn-primary btn-block btn-flat" formaction="SignUpWithPasswordAndWithReCaptcha" formmethod="post">Register</button>
        </div>
        <!-- /.col -->
    </div>
}